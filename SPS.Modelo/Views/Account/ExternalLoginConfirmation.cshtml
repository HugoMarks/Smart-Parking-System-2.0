@model SPS.Modelo.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Registre-se";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Associe sua conta @ViewBag.ProviderDisplayName.</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Formulário de associação</legend>
        <p>
            Você foi autenticado com êxito no <strong>@ViewBag.ProviderDisplayName</strong>.
                Indique abaixo um nome de usuário para este site e clique no botão Confirmar para finalizar
                o logon.
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="Registre-se" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
