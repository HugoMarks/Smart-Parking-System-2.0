@model SPS.Web.Models.RegisterParkingViewModel

@using (Html.BeginForm("Register", "Parking", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "registerParkingForm" }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CNPJ, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.CNPJ, new { @class = "form-control", id = "parkingCNPJTextBox" })
            @Html.ValidationMessageFor(m => m.CNPJ, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", id = "parkingPhoneTextBox" })
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(m => m.PostalCode, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", id = "parkingCepTextBox" })
            @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "text-danger" })
        </div>

        <div class="form-group address">
            @Html.LabelFor(m => m.Street, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Street, new { @class = "form-control", id = "parkingStreetTextBox", @readonly = "readonly" })
            @Html.ValidationMessageFor(m => m.Street, "", new { @class = "text-danger" })
        </div>

        <div class="form-group address">
            @Html.LabelFor(m => m.Square, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Square, new { @class = "form-control", id = "parkingSquareTextBox", @readonly = "readonly" })
            @Html.ValidationMessageFor(m => m.Square, "", new { @class = "text-danger" })
        </div>

        <div class="form-group address">
            @Html.LabelFor(m => m.City, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.City, new { @class = "form-control", id = "parkingCityTextBox", @readonly = "readonly" })
            @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
        </div>

        <div class="form-group address">
            @Html.LabelFor(m => m.State, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.State, new { @class = "form-control", id = "parkingStateTextBox", @readonly = "readonly" })
            @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Number, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Number, "", new { @class = "text-danger" })
        </div>
    </div>
}