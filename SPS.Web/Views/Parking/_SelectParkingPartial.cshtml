@using SPS.BO

@{
    var parkings = BusinessManager.Instance.Parkings.FindAll();

    if (parkings.Count > 0)
    {
        @Html.DropDownList("ParkingSelectList",
        parkings.Select(p => new SelectListItem() { Text = p.Name + " (" + p.CNPJ + ")", Value = p.CNPJ }), new { id = "parkingSelectList" })
    }
    else
    {
        @Html.Label("Não há estacionamentos cadastrados");
    }
}
