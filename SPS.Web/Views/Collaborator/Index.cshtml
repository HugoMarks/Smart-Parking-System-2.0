@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    Olá <!--User.Identity.GetApplicationUser().FirstName-->,
                </h1>
                <h2 style="color:#777777; font-size: 23px; line-height: 23.3999996185303px;">Escolha uma opção abaixo</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <b>Vagas Disponíveis</b>
                    </h3>
                </div>
                <div class="panel-body">
                    <img src="https://unsplash.imgix.net/photo-1413920346627-a4389f0abd61?q=75&amp;fm=jpg&amp;s=cfd43f65c77577abb3bf29c0d6a0775f"
                         class="img-responsive">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <b>Caixa</b>
                    </h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <div class="form-group">
                            <label class="control-label" for="exampleInputEmail1">ID Tag</label>
                            <input class="form-control" id="exampleInputEmail1" placeholder="Digite o ID  da tag"
                                   type="email">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="exampleInputPassword1">Hora de Entrada</label>
                            <input class="form-control" id="exampleInputPassword1"
                                   placeholder="Hora Entrada" type="text">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="exampleInputPassword1">Hora da Saída</label>
                            <input class="form-control" id="exampleInputPassword1"
                                   placeholder="Hora Saída" type="text">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="exampleInputPassword1">Hora Total Utilizada</label>
                            <input class="form-control" id="exampleInputPassword1"
                                   placeholder="Hora Total de Consumo" type="text">
                        </div>
                        <button type="submit" class="btn btn-lg btn-primary">Realizar_Pagamento</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <b>Vincular Tag</b>
                    </h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <div class="form-group">
                            <label class="control-label" for="exampleInputEmail1">Email do &nbsp;Usuário</label>
                            <input class="form-control" id="exampleInputEmail1"
                                   placeholder="Enter email" type="email">
                        </div>
                        <button type="submit" class="btn btn-lg btn-primary">Cadastrar_Tag</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="thumbnail btn-default dropdown">
                <a id="dLabel" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                    <img src="https://unsplash.imgix.net/photo-1422222948315-28aadb7a2cb8?q=75&amp;fm=jpg&amp;s=cfeadbd7a991e58b553bee29a7eeca55"
                         class="img-responsive">
                    <div class="caption">
                        <h3>Conta</h3>
                    </div>
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                    <li><a class="btn-default" href="#">Alterar Password</a></li>
                    <li><a class="btn-default" href="#">Dados Pessoais</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

