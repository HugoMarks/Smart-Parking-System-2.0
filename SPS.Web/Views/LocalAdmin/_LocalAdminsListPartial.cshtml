@using SPS.BO
@{
    var localAdmin = BusinessManager.Instance.LocalManagers.FindAll();
    var listItems = localAdmin.Select(c => new SelectListItem 
    { 
        Text = c.FirstName + " " + c.LastName + " (" + c.CPF + ")", 
        Value = c.Id.ToString()
    });
}

@using (Html.BeginForm("FullEdit", "LocalAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "editLocalAdminForm" }))
{
    @Html.DropDownList("LocalAdminsDropDownList", listItems, "Selecione um Administrador Local")
}
