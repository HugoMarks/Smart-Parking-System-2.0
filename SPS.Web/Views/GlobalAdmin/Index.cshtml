@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    Olá <!--User.Identity.GetApplicationUser().FirstName-->,
                </h1>
                <h2 style="color:#777777; font-size: 23px; line-height: 23.3999996185303px;">Escolha uma opção abaixo</h2>
            </div>
            <div class="row">
                <div class="col-md-3 ">
                    <div class="thumbnail btn-default dropdown">
                        <a id="dLabel" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                            <img src="https://unsplash.imgix.net/photo-1413920346627-a4389f0abd61?q=75&amp;fm=jpg&amp;s=cfd43f65c77577abb3bf29c0d6a0775f"
                                 class="img-responsive">
                            <div class="caption ">
                                <h3> Administradores Locais</h3>
                            </div>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a data-toggle="modal" data-target="#addLocalAdminModal" class="btn-default" href="#">Adicionar Administrador</a></li>
                            <li><a class="btn-default" href="#">Gerenciar Administrador</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="thumbnail btn-default dropdown">
                        <a id="dLabel" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                            <img src="https://unsplash.imgix.net/photo-1422222948315-28aadb7a2cb8?q=75&amp;fm=jpg&amp;s=cfeadbd7a991e58b553bee29a7eeca55"
                                 class="img-responsive">
                            <div class="caption">
                                <h3>Conta</h3>
                            </div>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a class="btn-default" href="#">Dados Pessoais</a></li>
                            <li><a class="btn-default" href="#">Alterar Password</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="thumbnail btn-default dropdown">
                        <a id="dLabel" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                            <img src="https://unsplash.imgix.net/photo-1423439793616-f2aa4356b37e?q=75&amp;fm=jpg&amp;s=3b42f9c018b2712544debf4d6a4998ff"
                                 class="img-responsive">
                            <div class="caption">
                                <h3>Estacionamentos</h3>
                            </div>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a class="btn-default" data-toggle="modal" data-target="#addParkingModal" href="#">Cadastrar Estacionamento</a></li>
                            <li><a class="btn-default" data-toggle="modal" data-target="#selectParkingModal" href="#">Gerenciar Estacionamento</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="thumbnail btn-default dropdown">
                        <a id="dLabel" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                            <img src="https://unsplash.imgix.net/photo-1413920346627-a4389f0abd61?q=75&amp;fm=jpg&amp;s=cfd43f65c77577abb3bf29c0d6a0775f"
                                 class="img-responsive">
                            <div class="caption">
                                <h3>Faturamento</h3>
                            </div>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a class="btn-default" href="#">Pesquisar</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="addLocalAdminModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Cadastrar Novo Administrador Local</h4>
                        </div>
                        <div class="modal-body">
                            @Html.Partial("~/Views/GlobalAdmin/_RegisterLocalManagerPartial.cshtml")
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                            <button id="registerLocalAdminSubmitBtn" type="button" class="btn btn-success" data-dismiss="modal">Registrar</button>
                       </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="addParkingModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Cadastrar Novo Administrador Local</h4>
                        </div>
                        <div class="modal-body">
                            @Html.Partial("~/Views/Parking/_RegisterParkingPartial.cshtml")
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                            <button id="registerParkingSubmitBtn" type="button" class="btn btn-success" data-dismiss="modal">Registrar</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="selectParkingModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Selecione um estacinamento</h4>
                        </div>
                        <div class="modal-body">
                            @Html.Partial("~/Views/Parking/_SelectParkingPartial.cshtml")
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                            <button id="selectParkingBtn" type="button" class="btn btn-success" data-dismiss="modal" disabled>Selecionar</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.mask.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/localManager.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/parkingRegister.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/validation.js")"></script>
}

