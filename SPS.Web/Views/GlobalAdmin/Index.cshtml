@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    Olá @User.Identity.GetApplicationUser().FirstName,
                </h1>
                <h2 style="color:#777777; font-size: 23px; line-height: 23.3999996185303px;">Escolha uma opção abaixo</h2>
            </div>
            <div class="row">
                <div class="col-md-3 ">
                    <div class="thumbnail btn-default dropdown">
                        <a id="dLabel" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                            <img src="~/pictures/ManageUsers.png" class="img-responsive img-menu">
                            <div class="caption center-text">
                                <h4><b>Administradores Locais</b></h4>
                            </div>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li>@Html.ActionLink("Adicionar Administrador", "Register", "LocalAdmin")</li>
                            <li><a class="btn-default" href="#">Gerenciar Administradores</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="thumbnail btn-default dropdown">
                        <a id="dLabel" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                            <img src="~/pictures/Users.png" class="img-responsive img-menu">
                            <div class="caption center-text">
                                <h4><b>Conta</b></h4>
                            </div>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a class="btn-default" href="#">Alterar Dados Pessoais</a></li>
                            <li><a class="btn-default" href="#">Alterar Password</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="thumbnail btn-default dropdown">
                        <a id="dLabel" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                            <img src="~/pictures/Companies_Icon_128.png" class="img-responsive img-menu">
                            <div class="caption center-text">
                                <h4><b>Estacionamentos</b></h4>
                            </div>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li>@Html.ActionLink("Cadastrar Estacionamento", "Register", "Parking")</li>
                            <li><a class="btn-default" data-toggle="modal" data-target="#selectParkingModal" href="#">Gerenciar Estacionamentos</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="thumbnail btn-default dropdown">
                        <a id="dLabel" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
                            <img src="~/pictures/Statistics.png" class="img-responsive img-menu">
                            <div class="caption center-text">
                                <h4><b>Faturamento</b></h4>
                            </div>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a class="btn-default" href="#">Gerenciar Faturamentos</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="selectParkingModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Selecione um estacinamento</h4>
                        </div>
                        <div class="modal-body">
                            @Html.Partial("~/Views/Parking/_SelectParkingPartial.cshtml")
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                            <button id="selectParkingBtn" type="button" class="btn btn-success" data-dismiss="modal" disabled>Selecionar</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.mask.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/selectParking.js")"></script>
}

