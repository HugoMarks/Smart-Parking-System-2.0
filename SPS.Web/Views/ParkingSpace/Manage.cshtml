@using SPS.BO
@using SPS.Web.Extensions
@using SPS.Model
@model IList<ParkingSpace>

@{
    ViewBag.Title = "Gerencie as vagas do seu estacionamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>


<div class="container">
    <h4>@Html.ActionLink("+ Adicione uma nova vaga", "Add", null, new { @class = "btn-default" })</h4>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Estado
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var space in Model)
            {
                <tr data-space-number="@space.Id" class="mouse-hand">
                    <th scope="row">@space.Number</th>
                    <td>@space.Status.GetName()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/spaceList.js")"></script>
}